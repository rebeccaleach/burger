<div class="container">

  <header>
    <h1>Virtual Vegetarian Burgers!</h1>
  </header>

  <main>
    <div class="floatLeft">

      <h2>Uneaten Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.eaten}}
            <li>
              {{this.name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="eaten" value="true">
                <button type="submit">Eat Burger</button>
              </form>

              {{> burgers/delete-burger}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="floatRight">

      <h2>Burgers You've Eaten</h2>

      <ul>
        {{#each burgers}}
          {{#if this.eaten}}
            <li>
              {{this.name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="eaten" value="false">
                <button type="submit">Barf It Up</button>
              </form>

              {{> burgers/delete-burger}}
            </li>
          {{/if}}
        {{/each}}
      </ul>

    </div>


    <div class="fullWidth">

      <h2>Add a Burger</h2>
      <form class="create-update-form" action="burgers/create" method="POST">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
          <label for="eat">Eaten?</label><br>
          <input type="radio" name="eat" value="1" checked> Eaten<br>
          <input type="radio" name="sleepy" value="0"> Not Eaten
        </div>

        <button type="submit">Add Burger</button>
      </form>

    </div>


  </main>

</div>
